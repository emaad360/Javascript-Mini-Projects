//Set username
let userName = ""
//userName = "Ahmad"

//Log the greeting to the console!
userName ? console.log(`Hello, ${userName}!`) : console.log("Hello!")

//Create the variable to the Question to be asked?
const userQuestion = "What number will you Pick?"
console.log(`Dear ${userName}, ${userQuestion}`)

//Set a random number between zero and eight.
let randomNumber = Math.floor(Math.random() * 8)

//Create a variable eightBall in which value of randomNumber will be saved
let eightBall = ""

//Create control flow to give replies based on result of random number!

switch (randomNumber) {
  case 1:
    eightBall = "It is certain";
    break;
  case 2:
    eightBall = "It is decidedly so";
    break;
  case 3:
    eightBall = "Reply hazy try again";
    break;
   case 4:
    eightBall = "Cannot predict now";
    break;
  case 5:
    eightBall = "Don't count on it";
    break;
  case 6:
    eightBall = "My sources say no";
    break;
  case 7:
    eightBall = "Outlook isn't good";
    break; 
  default:
    eightBall = "Bro try harder!!"
} 


//Now we log output into console.
console.log(`${eightBall}`)
console.log(`Random Number is: ${randomNumber}`)

